ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

mutiEllipsis()
  position relative
  line-height .4rem
  height 1.2rem
  overflow hidden
  padding-right .08rem
  &:after
    content '...'
    position absolute
    right 0
    bottom 0
    padding-left .1rem
    background-image linear-gradient(left,rgba(255,255,255,0.2),rgba(255,255,255,1) 55%)

border-1px($color)
  position:relative
  &:after
    display:block
    content:' '
    position:absolute
    bottom:0
    left:0
    width:100%
    border-top:1px solid $color
border-1px-top($color)
  position:relative
  &:before
    display:block
    content:' '
    width:100%
    bottom:0
    left:0
    border-top:1px solid $color
border-1px-bottom($color)
  position:relative
  &:before
    display:block
    content:' '
    width:100%
    bottom:0
    left:0
    border-bottom:1px solid $color
border-1px-right($color)
  position:relative
  &:before
    display:block
    position:absolute
    content:''
    height:100%
    right:0
    top:0
    border-right:1px solid $color
    
set-img($size)
  width: $size
  height: $size
  display:inline-block

bg-image($url)
  background-image:url("../assets/images/" + $url + "@2x.png")
  background-repeat:no-repeat
  @media (-webkit-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image:url("../assets/images/" + $url + "@3x.png")
    background-repeat:no-repeat

